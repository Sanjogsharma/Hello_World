let street = "Ivy Drive"
let buildingNumber = 110


let address = country + ", " + state + ", " + city //string and number cannot be concatanaeted

// String Interpolation

let interpolatedAddress = "\(country), \(state), \(city)"
let interpolatedStreetAddress = "\(buildingNumber) \(street)"


